{{! 
    render method details using HTML to provide more fine grain control in
    formatting details displayed for each method
}}
<table class="method-name">
    <thead class="method-name-header">
        <tr class="method-name-row">
            <th class="method-name-cell" colspan="2">{{name}}</th>
        </tr>
    </thead>
    {{#if description}}
    <tbody>
        <tr class="method-description-row">
            <td class="method-description-cell" colspan="2">{{description}}</td>
        </tr>
    </tbody>
    {{/if}}
    {{#if parameters}}
    <thead class="method-parameters-header">
        <tr class="method-parameters-header-row">
            <th class="method-parameters-header-cell" colspan="2">Parameters</th>
        </tr>
    </thead>
    <tbody>
        {{#each parameters}}
            <tr class="method-parameter-row">
                <td class="method-parameter-name-cell">{{this.displayType}}</td>
                <td class="method-parameter-description-cell">{{this.description}}</td>
            </tr>
        {{/each}}
    </tbody>
    {{/if}}
    {{#if returns}}
    <thead class="method-returns-header">
        <tr class="method-returns-header-row">
            <th class="method-returns-header-cell" colspan="2">Returns</th>
        </tr>
    </thead>
    <tbody>
        <tr class="method-returns-row">
            <td class="method-returns-type-cell">{{this.returnType}}</td>
            <td class="method-returns-description-cell">{{this.returns}}</td>
        </tr>
    </tbody>
    {{/if}}
</table>
